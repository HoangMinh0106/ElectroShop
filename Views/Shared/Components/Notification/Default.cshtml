@model List<WebBanHang.Models.Notification>

@{
    var unreadCount = ViewBag.UnreadCount;
}

<li class="nav-item dropdown">
    <a class="nav-link text-dark" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-bell-fill"></i>
        @if (unreadCount > 0)
        {
            <span class="position-absolute top-10 start-90 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6em;">
                @unreadCount
            </span>
        }
    </a>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
        @if (Model.Any())
        {
            @foreach (var notification in Model)
            {
                <li>
                    <a class="dropdown-item @(notification.IsRead ? "" : "fw-bold")" href="@notification.Url">
                        @notification.Message
                        <div class="small text-muted">@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </a>
                </li>
            }
            <li><hr class="dropdown-divider"></li>
        }
        
    </ul>
</li>
@model WebBanHang.Models.CartViewModel

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2>Giỏ hàng của bạn</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="orderSuccessAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <style>
        .fade-out {
            opacity: 1;
            transition: opacity 1s ease-out;
        }

        .fade-out.hidden {
            opacity: 0;
        }
    </style>

    <script>
        setTimeout(function () {
            var alertBox = document.getElementById('orderSuccessAlert');
            if (alertBox) {
                alertBox.classList.add('fade-out');
                alertBox.classList.add('hidden');
                setTimeout(function () {
                    alertBox.style.display = 'none';
                }, 1000); // chờ hiệu ứng kết thúc
            }
        }, 1000); // sau 3 giây bắt đầu ẩn
    </script>
}

@if (!Model.CartItems.Any())
{
    <div class="alert alert-warning">Giỏ hàng đang rỗng.</div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
}
else
{
    <form asp-action="UpdateQuantity" method="post">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th style="width: 15%;">Số lượng</th>
                    <th>Tổng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CartItems.Count; i++)
                {
                    var item = Model.CartItems[i];
                    var price = item.Price ?? 0;
                    var total = price * item.Quantity;

                    <tr>
                        <td><img src="@item.ImageUrl" alt="Ảnh" width="60" /></td>
                        <td>@item.ProductName</td>
                        <td>@price.ToString("N0") ₫</td>
                        <td>
                            <input type="number" name="Quantities" value="@item.Quantity" class="form-control" min="1" />
                            <input type="hidden" name="ProductIds" value="@item.ProductId" />
                        </td>
                        <td>@total.ToString("N0") ₫</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId"
                               class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-start mb-4">
             <button type="submit" class="btn btn-primary">Cập nhật giỏ hàng</button>
        </div>
    </form>

    <hr />

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Áp dụng mã giảm giá</h4>
            @if (string.IsNullOrEmpty(Model.AppliedVoucherCode))
            {
                <form asp-action="ApplyVoucher" method="post" class="d-flex">
                    <input type="text" name="voucherCode" class="form-control me-2" placeholder="Nhập mã voucher"/>
                    <button type="submit" class="btn btn-secondary">Áp dụng</button>
                </form>
            }
            else
            {
                <div class="alert alert-success">
                    Đã áp dụng mã: <strong>@Model.AppliedVoucherCode</strong>
                    <a asp-action="RemoveVoucher" class="text-danger ms-3 fw-bold">[Xóa]</a>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h4>Tổng cộng thanh toán</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Tạm tính</span>
                    <strong>@Model.SubTotal.ToString("N0") ₫</strong>
                </li>
                @if (Model.DiscountAmount > 0)
                {
                    <li class="list-group-item d-flex justify-content-between text-success">
                        <span>Giảm giá</span>
                        <strong>-@Model.DiscountAmount.ToString("N0") ₫</strong>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="fw-bold">Thành tiền</span>
                    <strong class="fw-bold">@Model.GrandTotal.ToString("N0") ₫</strong>
                </li>
            </ul>
            <div class="d-grid gap-2 mt-3">
                 <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Tiến hành thanh toán</a>
                 <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
}
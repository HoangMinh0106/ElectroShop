@model List<WebBanHang.Models.OrderViewModel>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #f8f9fa;
    }

    .admin-container {
        background-color: #2c2c2c;
        padding: 2rem;
        border-radius: 16px;
    }

    .admin-table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .admin-table-header h2 {
        margin: 0;
        font-weight: 600;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
    }

    .admin-table thead th {
        color: #adb5bd;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
        text-align: left;
        padding: 1rem;
        border-bottom: 2px solid #4a4a4a;
    }

    .admin-table tbody tr {
        border-bottom: 1px solid #4a4a4a;
    }
    
    .admin-table tbody tr:last-of-type {
        border-bottom: none;
    }

    .admin-table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }
    
    /* Style cho form cập nhật */
    .update-form {
        display: flex;
        align-items: center;
        gap: 10px; /* Khoảng cách giữa select và button */
    }

</style>

<div class="container my-5">
    <div class="admin-container">
        <div class="admin-table-header">
            <h2>Quản lý đơn hàng</h2>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>

       @if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="orderSuccessAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                var alertBox = document.getElementById('orderSuccessAlert');
                if (alertBox) {
                    alertBox.style.opacity = '0';
                    setTimeout(function () {
                        alertBox.style.display = 'none';
                    }, 500);
                }
            }, 1000);
        });
    </script>
}

        <table class="admin-table">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Người đặt</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>PTTT</th>
                    <th>Trạng thái & Hành động</th> @* <-- THÊM CỘT MỚI *@
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.OrderId</td>
                        <td>@order.Username</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                        <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                        <td>@order.PaymentMethod</td>
                        
                 
                        <td>
                            <form asp-controller="Admin" asp-action="UpdateOrderStatus" method="post" class="update-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                
                                <select name="status" class="form-select form-select-sm" style="width: 150px;">
                                    <option value="Pending" selected="@(order.PaymentStatus == "Pending")">Chờ xử lý</option>
                                    <option value="Paid" selected="@(order.PaymentStatus == "Paid")">Đã thanh toán</option>
                                    <option value="COD" selected="@(order.PaymentStatus == "COD")">COD</option>
                                    <option value="Cancelled" selected="@(order.PaymentStatus == "Cancelled")">Đã hủy</option>
                                </select>

                                <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
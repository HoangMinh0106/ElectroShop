@model IEnumerable<WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<WebBanHang.Models.Category>;
}

<h2 class="mb-4">Danh sách sản phẩm</h2>

<a class="btn btn-success mb-3" href="/Admin/CreateProduct">+ Thêm sản phẩm mới</a>
<p><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a></p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Ảnh</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@String.Format("{0:N0} ₫", product.Price)</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Ảnh" width="80" />
                    }
                </td>
                <td>
                    @{
                        var category = categories?.FirstOrDefault(c => c.Id == product.CategoryId)?.Name ?? "Không có";
                        @category
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Admin/EditProduct/@product.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/DeleteProduct/@product.Id" 
                       onclick="return confirm('Bạn có chắc muốn xoá sản phẩm này?')">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

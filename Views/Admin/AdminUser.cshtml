@model List<WebBanHang.Models.User>

<h2>Quản lý người dùng</h2>
<p><a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a></p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Giới tính</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Gender</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id"
                       onclick="return confirm('Xóa người dùng này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model dynamic

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #f8f9fa;
    }

    .forgot-password-wrapper {
        max-width: 500px;
        margin: 60px auto;
        background: #2c2c2c;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    .forgot-password-title {
        font-size: 24px;
        font-weight: bold;
        color: #d70018; /* Màu đỏ chủ đạo */
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 500;
        color: #f8f9fa;
    }

    .form-control {
        background-color: #3a3a3a;
        color: white;
        border: 1px solid #555;
        border-radius: 8px;
        padding: 10px;
    }
    
    .form-control:focus {
        background-color: #3a3a3a;
        color: white;
        border-color: #d70018; /* Màu viền khi focus */
        box-shadow: 0 0 0 0.25rem rgba(215, 0, 24, 0.25);
    }

    /* Nút màu đỏ tùy chỉnh */
    .btn-custom-red {
        background-color: #d70018;
        border-color: #d70018;
        color: white;
        font-weight: 600;
        width: 100%;
        border-radius: 8px;
        padding: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-custom-red:hover {
        background-color: #a80014;
        border-color: #a80014;
    }

    .alert {
        border-radius: 8px;
    }

</style>

<div class="forgot-password-wrapper">
    <div class="forgot-password-title">Khôi phục mật khẩu</div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="ForgotPassword" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Nhập địa chỉ email của bạn</label>
            <input type="email" name="email" class="form-control" required placeholder="example@gmail.com" />
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-custom-red">Gửi liên kết khôi phục</button>
        </div>
    </form>
</div>
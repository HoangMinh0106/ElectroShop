@model List<WebBanHang.Models.Voucher>
@using WebBanHang.Models
@{
    ViewData["Title"] = "Ví Voucher của tôi";
}

<style>
    .voucher-card {
        background-color: #2c2c2c;
        border-left: 5px solid #007bff;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
    }
    .voucher-card.expired {
        border-left-color: #6c757d;
        opacity: 0.6;
    }
    .voucher-info h5 {
        font-weight: 600;
        letter-spacing: 1px;
        color: #ffc107;
        margin-bottom: 0.5rem;
    }
    .voucher-details {
        font-size: 1rem;
    }
    .voucher-expiry {
        font-size: 0.9rem;
        color: #adb5bd;
    }
</style>

<div class="container my-5">
    <h2 class="mb-4" style="color: white; font-weight: 600;">@ViewData["Title"]</h2>

    @if (Model.Any())
    {
        @foreach (var voucher in Model)
        {
            var isExpired = voucher.ExpiryDate < DateTime.Now;
            <div class="voucher-card @(isExpired ? "expired" : "")">
                <div class="voucher-info">
                    <h5>@voucher.Code</h5>
                    <div class="voucher-details">
                        @if (voucher.DiscountType == DiscountType.Percentage)
                        {
                            <span>Giảm @voucher.DiscountValue%</span>
                        }
                        else
                        {
                            <span>Giảm @voucher.DiscountValue.ToString("N0") VNĐ</span>
                        }
                        cho đơn hàng từ @voucher.MinAmount.ToString("N0") VNĐ.
                    </div>
                     <div class="voucher-expiry">
                        Hạn sử dụng: @voucher.ExpiryDate.ToString("dd/MM/yyyy")
                        @if(isExpired)
                        {
                            <span class="text-danger ms-2">(Đã hết hạn)</span>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-secondary" role="alert">
            Bạn chưa có voucher nào. Hãy tích cực mua sắm để nhận ưu đãi nhé!
        </div>
    }
</div>
@model List<WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm theo danh mục";
}

<h2 class="text-white mb-4">Sản phẩm theo danh mục</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">
        Không có sản phẩm nào trong danh mục này.
    </div>
}
else
{
    <div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-danger">@string.Format("{0:N0}₫", product.Price)</p>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-success btn-sm mt-2"> Thêm vào giỏ hàng</a>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
}

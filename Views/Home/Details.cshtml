@model WebBanHang.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <p><strong>Giá:</strong> @string.Format("{0:N0} đ", Model.Price)</p>
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success mt-3 ms-2">
                Thêm vào giỏ hàng
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Quay về trang chủ</a>
        </div>
    </div>
</div>
